              -#   = f.date_select :date_birth, :order => [:day, :month, :year], :start_year => 1950, :end_year => Date.today.year ,class:'form-control'
              .form-group
                .field
                  -# = f.label :email
                  %br/
                  = f.email_field :email, autofocus: true, class:'form-control', required: true, placeholder: 'email'
              .form-group
