                  = f.text_field :username, class: 'form-control form-control-success', required: true, placeholder: 'username'
              .form-group
                .field
                  %br/
                  %span.form-control-label{:for => 'name'}
                  = f.text_field :name, class: 'form-control', required: true, placeholder: 'name', id: 'name'
