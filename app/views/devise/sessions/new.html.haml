.container-fluid
  .row
    .col-lg-6.offset-lg-3.left-side
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .card
          .card-body
            %h2.card-title.text-center Log in
            %hr/
            .field.form-group
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, class: 'form-control'
            .field.form-group
              = f.label :password
              %br/
              = f.password_field :password, autocomplete: "off", class: 'form-control'
            .actions
              - if devise_mapping.rememberable?
                .field.form-group
                  = f.check_box :remember_me
                  = f.label :remember_me
              .text-right
          = f.submit "Get in. Uffs", class: 'btn btn-primary'
        .alert.alert-info.text-center{:role => "alert", :style => 'margin: 0 auto;'}
          = render "devise/shared/links"
